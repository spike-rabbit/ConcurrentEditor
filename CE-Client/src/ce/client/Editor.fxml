<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<fx:root style="-fx-background-color: rgb(150,150,150);" type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<TextArea fx:id="textField" layoutX="-14.0" layoutY="-14.0" prefHeight="500.0" prefWidth="500.0">
         <effect>
            <Lighting diffuseConstant="1.44" specularConstant="0.0" specularExponent="14.88" surfaceScale="1.97">
               <bumpInput>
                  <Shadow blurType="GAUSSIAN" />
               </bumpInput>
               <light>
                  <Light.Distant color="#6d60ff" />
               </light>
            </Lighting>
         </effect>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></TextArea>
	</center>
	<bottom>
		<Button mnemonicParsing="false" onAction="#onClose" text="Close" BorderPane.alignment="CENTER">
			<font>
				<Font size="25.0" />
			</font>
         <effect>
            <DropShadow />
         </effect>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
		</Button>
	</bottom>
</fx:root>
